<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="flower_shop_water_action" model="ir.actions.act_window">
        <field name="name">flower.shop.water.action</field>
        <field name="res_model">flower.shop.water</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="flower_shop_water_view_tree" model="ir.ui.view">
        <field name="name">flower.shop.water.view.tree</field>
        <field name="model">flower.shop.water</field>
        <field name="arch" type="xml">
            <tree>
                <field name="watering_date" />
                <field name="lot_id" />
            </tree>
        </field>
    </record>

</odoo>
